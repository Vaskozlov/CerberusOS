{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "./compile.sh"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "./run.sh"
        },
        {
            "label": "DebugRun",
            "type": "shell",
            "command": "./run.sh"
        },
        {
            "label": "Debug",
            "type": "shell",
            "command": "gdb ${workspaceFolder}/build/kernel.elf && target remote localhost:1234"
        },
        {
            "label": "Build and Debug",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "DebugRun",
                "Debug"
            ]
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "Run"
            ],
            "problemMatcher": []
        }
    ]
}